<h1>Write a new story</h1>

<%= form_for @story do |f| %>

 	<% @story.errors.full_messages.each do |msg| %>
      <p class="error"><%= msg %></p>
    <% end %>

	<p>
		<%= f.label :title %>
		<br/>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :body %>
		<br/>
		<%= f.text_area :body, :style => "height: 100px;" %>
	</p>

	<h3>Beats</h3>

  	<%= f.fields_for :beats do |beat_form| %>
  		<%= beat_form.file_field :picture %>
  	<% end %>

  	<hr/>
	<p>
		<%= link_to "Back", :back %>
		<%= f.submit %>
	</p>

<%- end %>